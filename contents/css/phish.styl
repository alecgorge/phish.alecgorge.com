color_accent 	?= #00664C
color_gray 		?= #444
color_dkgray 	?= #222
color_ltgray 	?= #777

color_content_txt ?= #eee
color_footer_txt  ?= mix(color_accent, color_dkgray, 50%)
color_footer_link ?= darken(color_footer_txt, 30%)

body
	padding 0
	margin 0
	font 62.4%/160% "Helvetica Neue", Helvetica, Arial, sans-serif

	background black url("/img/cover.jpg") no-repeat top center fixed
	-webkit-background-size cover
	-moz-background-size cover
	background-size cover

@media only screen and (max-device-width : 1024px)  {
	body {
		background-size auto
		-webkit-background-size auto
	}
}

.gutter
	max-width 960px
	padding 0 40px
	margin auto

header
	min-height 200px

	.top-row
		h1, div
			margin 0
			padding 20px 0
			
			display inline-block
			margin-right 50px
			vertical-align middle

	h1

		img
			max-width 200px

	h2
		clear both
		margin 0
		padding 80px 0 120px

		font-size 65px
		line-height 96px
		font-weight normal

		color white
		text-transform lowercase

		.spacer
			height 75px

		span
			background rgba(color_accent, .75)
			padding 10px 20px
			
article
	padding 60px 0

	border-top 4px color_accent solid
	border-bottom 2px color_accent solid

	background rgba(color_gray, .9)
	color color_content_txt

	font-size 230%
	line-height 145%

	.screenshots
		img
			max-height 250px

	.gutter > *:first-child
		margin-top 0

	.gutter > *:last-child
		margin-bottom 0

h2
	margin 60px 0 5px 0
	padding 0

a
	color lighten(color_accent, 25%)

	&:hover
		color lighten(color_accent, 45%)

#cross_sell
	background rgba(color_dkgray, 0.95)
	color color_ltgray
	padding 40px 0

	font-size 24px
	line-height 36px

footer
	background color_accent
	color color_footer_txt

	padding 7px
	font-size 18px

	a
		color color_footer_link

		&:hover
			color darken(color_footer_link, 20%)
